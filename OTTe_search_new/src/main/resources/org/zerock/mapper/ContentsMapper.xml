<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.ContentsMapper">

	
	<!-- id 속성은 DAO 의 메소드와 같아야 한다. 여기의 boardVO 는 mybatis-confg.xml 에 Alias 되어 
		있습니다. -->
	<select id="selectTopOrder" resultType="org.zerock.domain.ContentsVO">
			
			<![CDATA[SELECT * FROM(                    
			SELECT * FROM contents_t ORDER BY contentsscore DESC)]]>
			
	</select>
	<select id="selectKoreanOrder" resultType="org.zerock.domain.ContentsVO">
			
			<![CDATA[SELECT * FROM CONTENTS_T WHERE NATIONCODE='KR' ORDER BY CONTENTSSCORE DESC]]>
			
	</select>
	<select id="selectLatestOrder" resultType="org.zerock.domain.ContentsVO">
			
			<![CDATA[SELECT * FROM CONTENTS_T ORDER BY CONTENTSSTART DESC]]>
			
	</select>
</mapper>
